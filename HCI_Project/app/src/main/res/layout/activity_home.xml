<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:background="@color/brown400"
            android:gravity="center"
            android:paddingVertical="10sp"
            android:text="Món ăn ưa thích"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/scrollViewFavorite"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8">

            <LinearLayout
                android:id="@+id/layoutFavorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/imgNotFound1"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8"
            android:src="@drawable/icon_list_not_found"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:background="@color/brown400"
            android:gravity="center"
            android:paddingVertical="10sp"
            android:text="Món ăn đánh giá cao"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/scrollViewRate"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8">

            <LinearLayout
                android:id="@+id/layoutRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/imgNotFound2"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8"
            android:src="@drawable/icon_list_not_found"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>